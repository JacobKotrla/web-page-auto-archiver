{
    "name": "Internet Archive Extension",
    "version": "0.3.1",
    "description": "Automatically Archive Pages.",
    "permissions": [
		"activeTab",
		"declarativeContent",
		"storage",
		"https://web.archive.org/*",
		"tabs"
		],
    "browser_action": {
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "manifest_version": 2,
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	}
}